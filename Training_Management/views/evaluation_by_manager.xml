<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="trainee_evaluation_not_completed_filter" model="ir.ui.view">
        <field name="name">Evaluation Not Completed</field>
        <field name="model">hr.trainee</field>
        <field name="arch" type="xml">
            <search string="Search trainee">
                <field name="employee_trainee"/>
                <group expand="0" string="Group By">
                    <filter name="evaluation_not_completed" string="Evaluation not completed" domain="[('Status','=','not completed')]"/>
                    
                </group>
            </search>
        </field>
    </record>
    
    <record id="hr_trainee_tree_view" model="ir.ui.view">
        <field name="name">hr trainee</field>
        <field name="model">hr.trainee</field>
        <field name="arch" type="xml">
            <tree string="trainee Training" delete ="0">
                <field name="employee_trainee"/>
                <field name="training"/>
                 <field name="follow_date"/>
                <button string="Evaluation" name="action_evaluate_by_manager" type="object" icon="fa-reply"/>
            </tree>
        </field>
    </record>

    <record id="hr_trainee_on_spot_tree_view" model="ir.ui.view">
        <field name="name">hr trainee</field>
        <field name="model">hr.trainee</field>
        <field name="arch" type="xml">
            <tree string="trainee Training" delete ="0">
                <field name="employee_trainee"/>
                <field name="training"/>
                 <field name="follow_date"/>
                <button string="On The Spot Evaluation" name="action_evaluate_by_employee" type="object" icon="fa-reply"/>
            </tree>
        </field>
    </record>

    <record id="hr_trainer_evaluation_form_view" model="ir.ui.view">
        <field name="name">Employee training Evaluation</field>
        <field name="model">evaluation.trainee</field>
        <field name="arch" type="xml">
            <form string="Evaluation Trainee By Manager" create="false" delete ="0">
                <sheet>
                    <group>

                        <separator  style="text-align: center; background: #ecf0f3; padding: 10px; padding-left: 20px; height: 50px; font-size: 14px; border-radius: 50px; box-shadow: inset 6px 6px 6px #cbced1, inset -6px -6px 6px white;" string="Follow Up Evaluation" delete ="0"/>
                        <separator  style=" background: #ecf0f3; padding: 10px; padding-left: 20px; height: 50px; font-size: 14px; border-radius: 50px; box-shadow: inset 6px 6px 6px #cbced1, inset -6px -6px 6px white;" string="Overall Satisfaction" delete ="0"/>      
                        <field name="question1" widget="radio" options="{'horizontal': true}"/>
                        <separator style=" background: #ecf0f3; padding: 10px; padding-left: 20px; height: 50px; font-size: 14px; border-radius: 50px; box-shadow: inset 6px 6px 6px #cbced1, inset -6px -6px 6px white;" string="Productivity impact"  delete ="0"/>
                        
                        <field name="question2" widget="radio" options="{'horizontal': true}"/>
                        <field name="question3" widget="radio" options="{'horizontal': true}"/>
                        <separator style=" background: #ecf0f3; padding: 10px; padding-left: 20px; height: 50px; font-size: 14px; border-radius: 50px; box-shadow: inset 6px 6px 6px #cbced1, inset -6px -6px 6px white;" string="Skills development"  delete ="0"/>
                        
                        <field name="question4" widget="radio" options="{'horizontal': true}"/>
                        <field name="question5" widget="radio" options="{'horizontal': true}"/>
                        <separator  style=" background: #ecf0f3; padding: 10px; padding-left: 20px; height: 50px; font-size: 14px; border-radius: 50px; box-shadow: inset 6px 6px 6px #cbced1, inset -6px -6px 6px white;" string="Content" delete ="0"/>
                        
                        <field name="question6" widget="radio" options="{'horizontal': true}"/>
                        <field name="question7" widget="radio" options="{'horizontal': true}"/>

                        <field name="comment"/>
                                               
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="evaluation_tree_view_for_notif_manager" model="ir.ui.view">
        <field name="name">Evaluation Tree</field>
        <field name="model">hr.trainee</field>
        <field name="arch" type="xml">
           <tree string="trainee Training" delete = "0">
                <field name="employee_trainee"/>
                <field name="training"/>
                <button string="Evaluation" name="action_evaluate_by_manager" type="object" icon="fa-reply"/>
            </tree>
        </field>
    </record>

    <record id="hr_training_action_not_evaluated_by_manager" model="ir.actions.act_window">
        <field name="name">Training</field>
        <field name="res_model">hr.trainee</field>
        <field name="domain">["&amp;","&amp;","&amp;",("employee_trainee.parent_id.user_id","=",uid), ("employee_trainee.state","not in",["relieved", "terminate", "joined", "training", "withdrawn"]),("evaluate_by_manager","=",False),"|",("follow_date","=",datetime.datetime.now().strftime('%Y-%m-%d')),("follow_date","&lt;",datetime.datetime.now().strftime('%Y-%m-%d'))]</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="evaluation_tree_view_for_notif_manager"/>
    </record>

    <menuitem id="menu_evaluation"
              name="Evaluation"
              parent="Training_Management.menu_training_root"
              sequence="20"/>
</odoo>